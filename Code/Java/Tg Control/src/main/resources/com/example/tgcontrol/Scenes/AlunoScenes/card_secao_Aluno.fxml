<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="apCard" maxHeight="150.0" minHeight="150.0" prefHeight="150.0" style="-fx-background-radius: 20px; -fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tgcontrol.controllers.Alunos.Card_Secao_Aluno_C">
    <children>
        <StackPane prefHeight="70.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="lbTituloSecao" text="Seção 1" textFill="#030303" StackPane.alignment="TOP_LEFT">
                    <StackPane.margin>
                        <Insets left="50.0" top="20.0" />
                    </StackPane.margin>
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="lbDataSecao" text="Última atualização" textFill="#a1a1a1" StackPane.alignment="TOP_LEFT">
                    <StackPane.margin>
                        <Insets left="50.0" top="40.0" />
                    </StackPane.margin>
                </Label>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="TOP_LEFT">
                    <StackPane.margin>
                        <Insets left="20.0" top="20.0" />
                    </StackPane.margin>
                    <image>
                        <Image url="@../../SceneImages/Task Images/task-icon.png" />
                    </image>
                </ImageView>
                <Label fx:id="lbStatus" style="-fx-background-color: #00e100; -fx-background-radius: 5px;" text="Aceito" textFill="WHITE" StackPane.alignment="BOTTOM_RIGHT">
                    <StackPane.margin>
                        <Insets right="15.0" />
                    </StackPane.margin>
                    <padding>
                        <Insets left="5.0" right="5.0" />
                    </padding>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </StackPane>
        <StackPane prefHeight="60.0" style="-fx-border-color: #A1A1A1; -fx-border-radius: 10px;" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <children>
                <Label fx:id="lbNomeTarefa" text="API 1" textFill="#322c2c" StackPane.alignment="CENTER_LEFT">
                    <StackPane.margin>
                        <Insets left="10.0" />
                    </StackPane.margin>
                </Label>
                <Button fx:id="btnExibirTarefa" mnemonicParsing="false" onAction="#exibirTarefa" style="-fx-background-color: TRANSPARENT; -fx-border-color: #DD08A1; -fx-border-radius: 7px;" text="Exibir Tarefa" textFill="#DD08A1" StackPane.alignment="CENTER_RIGHT">
                    <StackPane.margin>
                        <Insets right="10.0" />
                    </StackPane.margin>
                </Button>
            </children>
        </StackPane>
    </children>
</AnchorPane>
