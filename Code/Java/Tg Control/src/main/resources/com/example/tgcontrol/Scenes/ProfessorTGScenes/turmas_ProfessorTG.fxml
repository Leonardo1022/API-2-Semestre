<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="524.0" prefWidth="889.0" spacing="15.0" style="-fx-background-color: #f4f6f9; -fx-font-family: 'Segoe UI', Arial, sans-serif;" stylesheets="@../../SceneStyles/tableStyle.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tgcontrol.controllers.ProfessorTG.Turmas_ProfessorTG_C">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Gerenciamento de Turmas">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
            </children>
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </HBox>
        <TableView fx:id="tvTurmas" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colDisciplina" prefWidth="400.0" text="Matéria" />

                <TableColumn fx:id="colAno" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" text="Ano">
                    <style>-fx-alignment: CENTER;</style>
                </TableColumn>
                <TableColumn fx:id="colSemestre" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" text="Semestre">
                    <style>-fx-alignment: CENTER;</style>
                </TableColumn>
                <TableColumn fx:id="colAcao" maxWidth="180.0" minWidth="180.0" prefWidth="180.0" text="Ação" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
