                    </children>
                </VBox>
                <VBox alignment="CENTER" prefWidth="260.0" style="-fx-padding: 15px; -fx-background-color: white; -fx-background-radius: 8px; -fx-border-radius: 8px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 15, 0, 0, 5);">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #555;" text="TGs Concluídos" />
                        <Label fx:id="lblTgsConcluidos" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #6A1B9A;" text="-">
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </Label>
                    </children>
                </VBox>
