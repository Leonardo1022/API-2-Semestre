                        <HBox alignment="CENTER_LEFT" prefHeight="35.0" style="-fx-border-color: transparent transparent #e0e0e0 transparent;">
                            <children>
                                <Label prefWidth="150.0" text="Correção Seção 3">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <Label prefWidth="200.0" text="Carlos Daniel">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                        </HBox>
                    </children>
                </VBox>
