                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Label>
                        <BarChart fx:id="graficoProgressoAlunos" style="-fx-bar-fill: #3498db;" VBox.vgrow="ALWAYS">
                            <xAxis>
                                <CategoryAxis side="BOTTOM" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT" />
                            </yAxis>
                        </BarChart>
                    </children>
                </VBox>
                <VBox prefWidth="380.0" style="-fx-border-color: #e0e0e0; -fx-border-radius: 8px; -fx-border-width: 2px; -fx-background-color: white;">
                    <children>
                        <Label text="Atividades Recentes:">
                            <font>
                                <Font name="System Bold" size="16.0" />
