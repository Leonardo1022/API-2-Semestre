        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
            <children>
                <Label text="Aguardando Correção">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <StackPane VBox.vgrow="ALWAYS">
                    <children>
                        <VBox fx:id="placeholderContainer" alignment="CENTER" spacing="10.0" visible="false">
                            <children>
                                <ImageView fitHeight="100.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../SceneImages/noNotifications.png" />
                                    </image>
                                </ImageView>
                                <Label text="Não há novas atualizações." textFill="#666666" />
                            </children>
                        </VBox>
                        <TableView fx:id="tabelaPendentes">
                            <columns>
                                <TableColumn fx:id="colProgresso" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Progresso" />

                                <TableColumn fx:id="colAluno" prefWidth="211.0" text="Aluno" />

                                <TableColumn fx:id="colTurma" prefWidth="240.0" text="Matéria">
