                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #555;" text="Total de Orientandos" />
                        <Label fx:id="lblTotalOrientandos" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #6A1B9A;" text="-">
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </Label>
                    </children>
                </VBox>
            </children>
        </HBox>

        <HBox prefHeight="180.0" spacing="20.0">
            <children>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Progresso Geral dos Alunos">
                            <font>
                                <Font name="System Bold" size="16.0" />
